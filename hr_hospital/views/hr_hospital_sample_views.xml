<?xml version="1.0"?>
<odoo>

    <record id="hr_hospital_sample_action" model="ir.actions.act_window">
        <field name="name">Samples</field>
        <field name="res_model">hr_hospital.sample</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="hr_hospital_sample_view_tree" model="ir.ui.view">
        <field name="name">hr_hospital.sample.tree</field>
        <field name="model">hr_hospital.sample</field>
        <field name="arch" type="xml">
            <tree string="Samples">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_sample_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.sample.form</field>
        <field name="model">hr_hospital.sample</field>
        <field name="arch" type="xml">
            <form string="Sample">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
